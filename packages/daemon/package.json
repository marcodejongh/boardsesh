{
  "name": "boardsesh-daemon",
  "version": "1.0.0",
  "description": "WebSocket daemon for BoardSesh Party Mode",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:db:up": "docker-compose up -d db",
    "test:db:migrate": "DATABASE_URL=postgresql://postgres:postgres@localhost:5433/boardsesh_daemon_test drizzle-kit migrate",
    "test:integration": "vitest run src/__tests__/integration.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@boardsesh/shared-schema": "*",
    "@graphql-tools/schema": "^10.0.30",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.3",
    "express": "^4.21.1",
    "graphql": "^16.9.0",
    "graphql-type-json": "^0.3.2",
    "graphql-ws": "^5.16.0",
    "multer": "^1.4.5-lts.1",
    "postgres": "^3.4.5",
    "uuid": "^11.0.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/graphql-type-json": "^0.3.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
