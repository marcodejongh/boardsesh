{
  "name": "boardsesh-daemon",
  "version": "1.0.0",
  "description": "WebSocket daemon for BoardSesh Party Mode",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@boardsesh/shared-schema": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.3",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "postgres": "^3.4.5",
    "uuid": "^11.0.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
