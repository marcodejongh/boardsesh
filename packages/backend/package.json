{
  "name": "boardsesh-backend",
  "version": "1.0.0",
  "description": "WebSocket backend for Boardsesh Party Mode",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development DOTENV_CONFIG_PATH=.env.local tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:db:up": "docker-compose up -d db",
    "test:db:migrate": "DATABASE_URL=postgresql://postgres:postgres@localhost:5433/boardsesh_backend_test drizzle-kit migrate",
    "test:integration": "vitest run src/__tests__/integration.test.ts",
    "test:redis": "vitest run src/__tests__/redis-pubsub.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@boardsesh/aurora-sync": "*",
    "@boardsesh/crypto": "*",
    "@boardsesh/db": "*",
    "@boardsesh/shared-schema": "*",
    "@graphql-tools/schema": "^10.0.30",
    "@panva/hkdf": "^1.2.1",
    "@whatwg-node/fetch": "^0.10.13",
    "busboy": "^1.6.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "graphql": "^16.12.0",
    "graphql-type-json": "^0.3.2",
    "graphql-ws": "^6.0.6",
    "graphql-yoga": "^5.18.0",
    "ioredis": "^5.4.1",
    "jose": "^4.15.9",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/graphql-type-json": "^0.3.5",
    "@types/node": "^25.0.3",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "postgres": "^3.4.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
