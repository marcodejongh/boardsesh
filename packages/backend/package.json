{
  "name": "boardsesh-backend",
  "version": "1.0.0",
  "description": "WebSocket backend for Boardsesh Party Mode",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "npm run build --workspace=@boardsesh/shared-schema && tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:db:up": "docker-compose up -d db",
    "test:db:migrate": "DATABASE_URL=postgresql://postgres:postgres@localhost:5433/boardsesh_backend_test drizzle-kit migrate",
    "test:integration": "vitest run src/__tests__/integration.test.ts",
    "test:redis": "vitest run src/__tests__/redis-pubsub.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@boardsesh/db": "*",
    "@boardsesh/shared-schema": "*",
    "@graphql-tools/schema": "^10.0.30",
    "ioredis": "^5.4.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "graphql": "^16.12.0",
    "graphql-type-json": "^0.3.2",
    "graphql-ws": "^6.0.6",
    "jose": "^6.0.0",
    "multer": "^2.0.2",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/graphql-type-json": "^0.3.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "postgres": "^3.4.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
