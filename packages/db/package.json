{
  "name": "@boardsesh/db",
  "version": "1.0.0",
  "description": "Shared database schema and client for Boardsesh",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "import": "./src/schema/index.ts",
      "default": "./src/schema/index.ts"
    },
    "./schema/boards": {
      "types": "./src/schema/boards/index.ts",
      "import": "./src/schema/boards/index.ts",
      "default": "./src/schema/boards/index.ts"
    },
    "./schema/auth": {
      "types": "./src/schema/auth/index.ts",
      "import": "./src/schema/auth/index.ts",
      "default": "./src/schema/auth/index.ts"
    },
    "./schema/app": {
      "types": "./src/schema/app/index.ts",
      "import": "./src/schema/app/index.ts",
      "default": "./src/schema/app/index.ts"
    },
    "./relations": {
      "types": "./src/relations/index.ts",
      "import": "./src/relations/index.ts",
      "default": "./src/relations/index.ts"
    },
    "./client": {
      "types": "./src/client/index.ts",
      "import": "./src/client/index.ts",
      "default": "./src/client/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "test": "tsx --test scripts/**/*.test.ts",
    "db:studio": "drizzle-kit studio",
    "db:import-moonboard": "tsx scripts/import-moonboard-problems.ts",
    "db:seed-social": "tsx scripts/seed-social.ts",
    "db:create-test-user": "tsx scripts/create-test-user.ts"
  },
  "dependencies": {
    "@boardsesh/shared-schema": "*",
    "@neondatabase/serverless": "1.0.2",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@types/node": "^25",
    "@types/ws": "^8.18.1",
    "dotenv": "^17.3.1",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "next-auth": "^4.24.13"
  },
  "peerDependenciesMeta": {
    "next-auth": {
      "optional": true
    }
  }
}
