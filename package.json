{
  "name": "boardsesh-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@boardsesh/web",
    "build": "npm run build --workspace=@boardsesh/shared-schema && npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=@boardsesh/web",
    "build:daemon": "npm run build --workspace=boardsesh-daemon",
    "build:shared": "npm run build --workspace=@boardsesh/shared-schema",
    "lint": "npm run lint --workspace=@boardsesh/web",
    "test": "npm run test --workspaces --if-present",
    "test:run": "npm run test:run --workspaces --if-present",
    "daemon:dev": "npm run dev --workspace=boardsesh-daemon",
    "daemon:start": "npm run start --workspace=boardsesh-daemon"
  },
  "engines": {
    "node": ">=18"
  }
}
