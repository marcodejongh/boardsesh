{
  "name": "boardsesh-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@boardsesh/web",
    "build": "npm run build --workspace=@boardsesh/shared-schema && npm run build --workspace=@boardsesh/crypto && npm run build --workspace=@boardsesh/db && npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=@boardsesh/web",
    "build:backend": "npm run build --workspace=boardsesh-backend",
    "build:shared": "npm run build --workspace=@boardsesh/shared-schema",
    "build:crypto": "npm run build --workspace=@boardsesh/crypto",
    "build:db": "npm run build --workspace=@boardsesh/db",
    "lint": "npm run lint --workspace=@boardsesh/web",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "typecheck:web": "npm run typecheck --workspace=@boardsesh/web",
    "typecheck:backend": "npm run typecheck --workspace=boardsesh-backend",
    "typecheck:db": "npm run typecheck --workspace=@boardsesh/db",
    "typecheck:shared": "npm run typecheck --workspace=@boardsesh/shared-schema",
    "test": "npm run test --workspaces --if-present",
    "test:run": "npm run test:run --workspaces --if-present",
    "test:help-screenshots": "TEST_USER_EMAIL=$(op read 'op://Boardsesh/Boardsesh local/username') TEST_USER_PASSWORD=$(op read 'op://Boardsesh/Boardsesh local/password') npx playwright test --project=chromium e2e/help-screenshots.spec.ts --config=packages/web/playwright.config.ts",
    "backend:dev": "npm run dev --workspace=boardsesh-backend",
    "backend:start": "npm run start --workspace=boardsesh-backend",
    "db:up": "sh scripts/dev-db-up.sh",
    "db:migrate": "npm run db:migrate --workspace=@boardsesh/db",
    "db:studio": "npm run db:studio --workspace=@boardsesh/db",
    "db:import-moonboard": "npm run db:import-moonboard --workspace=@boardsesh/db",
    "db:seed-social": "npm run db:seed-social --workspace=@boardsesh/db",
    "controller:codegen": "node embedded/scripts/generate-graphql-types.mjs",
    "controller:codegen:board-data": "node embedded/scripts/generate-board-data.mjs",
    "controller:codegen:test": "node --test embedded/scripts/generate-graphql-types.test.mjs && node --test embedded/scripts/generate-board-data.test.mjs && python3 embedded/scripts/test_prebuild.py",
    "controller:build": "cd embedded/projects/board-controller && pio run",
    "controller:upload": "cd embedded/projects/board-controller && pio run -t upload",
    "controller:monitor": "cd embedded/projects/board-controller && pio device monitor",
    "controller:format": "find embedded -name '*.cpp' -o -name '*.h' | xargs clang-format -i",
    "controller:format:check": "find embedded -name '*.cpp' -o -name '*.h' | xargs clang-format --dry-run --Werror"
  },
  "engines": {
    "node": ">=18"
  }
}
